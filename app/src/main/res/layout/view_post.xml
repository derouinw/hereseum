<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/post_padding"
    android:layout_marginTop="@dimen/post_margin"
    android:layout_marginBottom="@dimen/post_margin">

    <ImageView
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginBottom="@dimen/post_margin"
        android:src="@drawable/ic_loading_bg"
        android:background="@color/post_background"/>

    <ImageView
        android:id="@+id/post_avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_below="@id/post_image" />

    <TextView
        android:id="@+id/post_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_image"
        android:layout_toRightOf="@id/post_avatar"
        android:layout_toEndOf="@id/post_avatar"
        android:layout_alignBaseline="@id/post_avatar"
        android:paddingLeft="@dimen/post_margin"/>

    <TextView
        android:id="@+id/post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>