<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grilla.hereseum.activities.InstagramAuthActivity">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/auth_with_insta"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/auth_text_margin"
        android:visibility="gone"
        android:id="@+id/insta_loading_text"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/insta_loading_text"
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/insta_loading_spinner"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>
