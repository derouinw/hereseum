<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ActivityNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/launch_background</item>
    </style>

    <style name="TimelineYear">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/years_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#8fff</item>
    </style>

    <style name="TimelineMonth">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/months_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/post_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#8fff</item>
    </style>

    <style name="TimelineHidden">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
